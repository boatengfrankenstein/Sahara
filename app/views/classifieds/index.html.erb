<%= render partial: "layouts/navbar" %>
<p id="notice"><%= notice %></p>

<%= render partial: "layouts/menu" %>

<div id="masonry-container">

       <%  @classifieds.each do |classified| %>
         <div class="box col2  hvr-grow">
      
         <%= link_to image_tag(classified.images[0].url), classified_path(classified)  %>
     
       
          <div class="card-body card-body-cascade text-center">

          <!-- Description -->
          <p class="card-text"><%= classified.title %></p>
           <p class="card-meta"><small><%= classified.location %></small></p>
          <!-- Card footer -->
    
        </div>
         </div>
 <% end %>

 </div>
 <div class="row justify-content-md-center">
 <div class="digg_pagination ">
 <%= will_paginate @classifieds, :container => false %>
</div>
</div>


<%= render partial: "layouts/footer" %> 